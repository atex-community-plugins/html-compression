<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <input-template name="com.atex.plugins.htmlCompression.Configuration" label="HTML compression configuration">
    <policy>com.atex.plugins.html.compression.ConfigPolicy</policy>
    <editor>com.polopoly.plugin.OPluginConfigContextPolicyWidget</editor>
    <viewer>com.polopoly.plugin.OPluginConfigContextPolicyWidget</viewer>
    <type>AppConfig</type>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="ViewState_insert">false</param>
    <field name="enabled" input-template="p.Checkbox" label="com.atex.plugins.htmlCompression.enabled">
      <param name="checked">true</param>
    </field>
    <field name="warnSize" input-template="p.TextInput" label="com.atex.plugins.htmlCompression.warning">
    </field>
</input-template>
</template-definition>
